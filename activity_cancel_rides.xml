
    <?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/singleHikeInfoContainer"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="start"
        android:layout_margin="5dip"
        android:padding="1dp"
        android:text="@string/destination"
        android:textColor="@color/dark_green"
        android:textSize="16sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/destinationOfHike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/destination_goes_here"
        android:textColor="@color/green"
        android:textSize="15sp"
        android:textStyle="bold" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="start"
        android:layout_margin="5dip"
        android:padding="1dp"
        android:gravity="center_vertical"
        android:text="@string/driver"
        android:textColor="@android:color/primary_text_light"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/driverNameOfHike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="0.5"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/driver_name_goes_here"
        android:textColor="@android:color/primary_text_light"
        android:textSize="15sp" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="start"
        android:layout_margin="5dip"
        android:gravity="center_vertical"
        android:padding="1dp"
        android:text="@string/start_time"
        android:textColor="@android:color/primary_text_light"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/timeOfHike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="start"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/time_goes_here"
        android:textColor="@android:color/primary_text_light"
        android:textSize="15sp" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="start"
        android:gravity="center_vertical"
        android:layout_margin="5dip"
        android:padding="1dp"
        android:text="@string/number_of_seats"
        android:textColor="@android:color/primary_text_light"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/numberOfSeatsOfHike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="start"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/seat_number_goes_here"
        android:textColor="@android:color/primary_text_light"
        android:textSize="15sp" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="start"
        android:layout_margin="5dip"
        android:gravity="center_vertical"
        android:padding="1dp"
        android:text="@string/start_place"
        android:textColor="@android:color/primary_text_light"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/startingPlaceOfHike"
        android:layout_width="fill_parent"
        android:layout_weight="0.5"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Place of starting goes here"
        android:textColor="@android:color/primary_text_light"
        android:textSize="15sp" />
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="start"
        android:layout_margin="5dip"
        android:gravity="center_vertical"
        android:padding="1dp"
        android:text="@string/contact_no"
        android:textColor="@android:color/primary_text_light"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/contactNumberOfHike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_gravity="start"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/driver_contact_number_goes_here"
        android:textColor="@android:color/primary_text_light"
        android:textSize="15sp" />
</LinearLayout>

    <Button
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:autoText="false"
        android:text="@string/cancel_rides" />
</LinearLayout>